<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_foto"
                android:src="@drawable/img_mtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/cv_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Warga Manuruki Melakukan Kerja Bakti"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_penulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_judul"
        android:textColor="@color/grey"
        android:layout_alignLeft="@id/tv_judul"
        android:layout_marginTop="5dp"
        android:text="Oleh : Hildayanti"
        android:textSize="10dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_penulis"
        android:layout_alignLeft="@id/tv_judul"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:layout_marginRight="12dp"
        android:ellipsize="end"
        android:text="@string/lorem_ipsum" />

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cv_img"
        android:textColor="@color/black"
        android:text="@string/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_tanggal"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>