<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="@dimen/dimen_20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/foto_profile" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cv_img"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="Hildayanti"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nik"
        android:layout_alignLeft="@id/tv_nama"
        android:layout_below="@id/tv_nama"
        android:text="0987667890"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_status"
        android:text="Aktif"
        android:background="@drawable/bg_text_grey"
        android:layout_width="wrap_content"
        android:paddingVertical="2dp"
        android:textSize="12sp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="14dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_status"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@id/tv_status"
        android:gravity="center_horizontal"
        android:text="Bayar :"
        android:textSize="10sp" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>